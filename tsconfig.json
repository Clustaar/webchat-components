{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "module": "es2020",
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ],
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "paths": {
      "clustaar-webchat-components": [
        "dist/clustaar-webchat-components/clustaar-webchat-components",
        "dist/clustaar-webchat-components"
      ]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true
  }
}